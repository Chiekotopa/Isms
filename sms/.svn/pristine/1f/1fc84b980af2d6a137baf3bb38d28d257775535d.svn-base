<!DOCTYPE html >
<html
	lang="fr"
	xmlns:p="http://primefaces.org/ui"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html">

<ui:composition template="/WEB-INF/new_templates/template.xhtml">

	<ui:define name="title">iSMS | Historique des SMS</ui:define>
	<ui:define name="body">
	       	<h:form id="FormSearchId">
			<h:panelGrid id="panelgId" columns="6">
			    <f:facet name="header">
			        <p:row>
			            <p:column colspan="7">Rechercher dans une période</p:column>
			        </p:row> 
		       </f:facet>
		       
			   <p:outputLabel for="datetime1" value="Date début:" />
               <p:calendar id="datetime1" value="#{ismsBean.dated}" required="true" requiredMessage="Date de début requise." pattern="yyyy-MM-dd HH:mm:ss" />
               
               <p:outputLabel for="datetime2" value="Date Fin:" />
               <p:calendar id="datetime2" value="#{ismsBean.datef}" required="true" requiredMessage="Date de fin requise." pattern="yyyy-MM-dd HH:mm:ss" />
               
               <p:commandButton value="Rechercher" id="dt1" actionListener="#{ismsBean.findSMSByPeriode()}" update=":FormMesSMS:smsData" icon="ui-icon-search" />
               <p:commandButton value="Tout afficher" id="dt2"  immediate="true" actionListener="#{ismsBean.smsInitialisation()}" update=":FormMesSMS:smsData,datetime1,datetime2" />
 
			</h:panelGrid>
		   </h:form>
		    <h:form id="FormMesSMS">
			<p:panel
				id="listeSMS"
				header="Historique de mes SMS"
				style="height:620px">

				<p:dataTable
					id="smsData"
					var="sms"
					emptyMessage="Pas de message envoyé"
					value="#{ismsBean.smss}"
					widgetVar="smsTable"
					rows="10"
                    paginator="true"
                    paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
                    rowsPerPageTemplate="10,20,50,100"
					filteredValue="#{ismsBean.filteredSms}"
					rowStyleClass="#{sms.etat == false ? 'colored' : null}"
					resizableColumns="true"
					rowHover="true"
					rowIndexVar="index"
					scrollable="true"
					scrollHeight="400" >

					<p:column
						headerText="No"
						width="30">
						<h:outputText value="#{index + 1}" />
					</p:column>

					<p:column
						headerText="Sender ID"
						sortBy="#{sms.sender}"
						filterBy="#{sms.sender}"
						width="120"
						filterMatchMode="contains">
						<h:outputText value="#{sms.sender}" />
					</p:column>

					<p:column
						headerText="Destinataire"
						sortBy="#{sms.destinataire}"
						filterBy="#{sms.destinataire}"
						width="120"
						filterMatchMode="contains">
						<h:outputText value="#{sms.destinataire}" />
					</p:column>

					<p:column headerText="Message" filterBy="#{sms.contenu}" filterMatchMode="contains">
						<h:outputText value="#{sms.contenu}" escape="false" style="white-space:pre-line;"/>
					</p:column>

					<p:column
						headerText="Cout"
						sortBy="#{sms.cout}"
						filterBy="#{sms.cout}"
						width="30"
						filterMatchMode="contains">
						<h:outputText value="#{sms.cout}" />
					</p:column>

					<p:column
						headerText="Etat"
						sortBy="#{sms.etat}"
						filterBy="#{sms.etat}"
						width="100"
						filterMatchMode="contains">
						<h:outputText
							value="Envoyé"
							rendered="#{sms.etat}" />
						<h:outputText
							value="En attente"
							rendered="#{!sms.etat}" />
					</p:column>

					<p:column
						headerText="Date d'envoi"
						sortBy="#{sms.dateEnvoi}"
						filterBy="#{sms.dateEnvoi}"
						width="150"
						filterMatchMode="contains">
						<h:outputText value="#{sms.dateEnvoi}" />
					</p:column>

				</p:dataTable>

				<f:facet name="footer">
					<p:commandButton
						value="Rafraichir"
						style="font-weight:bold"
						action="#{ismsBean.reloadSMS()}"
						update="listeSMS" />

					<p:commandButton
						id="pdf"
						icon="ui-icon-myExport"
						ajax="false"
						value="Exporter">

						<p:dataExporter
							type="pdf"
							target="smsData"
							fileName="SmsList"
							preProcessor="#{ismsBean.preProcessPDF}" />

					</p:commandButton>
				</f:facet>

			</p:panel>

		</h:form>
	</ui:define>
</ui:composition>
</html>