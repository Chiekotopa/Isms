<!DOCTYPE html >
<html
	lang="fr"
	xmlns:p="http://primefaces.org/ui"
	xmlns:pe="http://primefaces.org/ui/extensions"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html">

<ui:composition template="/WEB-INF/new_templates/templateAdmin.xhtml">

	<ui:define name="title">iSMS | Statistiques de Credit</ui:define>
	<ui:define name="body">
		<h:form id="FormStatAchats">

			<p:panel
				id="statAchat"
				header="Statistique Crédits"
				style="height:496px">

				<p:dataTable
					id="creditSubTable"
					var="historique"
					value="#{ismsBean.historiqueCredit}"
					emptyMessage="Pas de credit pour ce client"
					resizableColumns="true"
					rowHover="true"
					rowIndexVar="index"
					scrollable="true"
					scrollHeight="350">

					<f:facet name="header">
	           			 Credits Clients
	        		</f:facet>

					<f:facet name="header">
			            Historique par Client
			        </f:facet>

					<p:columnGroup type="header">

						<p:row>
							<p:column headerText="Valeur initiale" />
							<p:column headerText="Valeur actuelle" />
							<p:column headerText="Validité initiale" />
							<p:column headerText="Validité actuelle" />
							<p:column headerText="Date D'achat" />
						</p:row>
					</p:columnGroup>

					<p:subTable
						var="credit"
						value="#{historique.credits}">

						<f:facet name="header">
							<h:outputText value="#{historique.nomClient}" />
						</f:facet>

						<p:column>
							<h:outputText
								value="#{credit.valeurInitiale}"
								style="float:right" />
						</p:column>

						<p:column>
							<h:outputText
								value="#{credit.valeur}"
								style="float:right" />
						</p:column>

						<p:column>
							<h:outputText
								value="#{credit.validiteInitiale}"
								style="float:right" />
						</p:column>

						<p:column>
							<h:outputText
								value="#{credit.validite}"
								style="float:right" />
						</p:column>

						<p:column>
							<h:outputText value="#{credit.dateAchat}" />
						</p:column>

					</p:subTable>
					
				</p:dataTable>

			</p:panel>


		</h:form>
	</ui:define>
</ui:composition>
</html>